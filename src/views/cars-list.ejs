<!-- index.html -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Car Listing</title>
    <style>
      /* Add your CSS styles here */
      body {
        font-family: Arial, sans-serif;
        padding: 20px;
      }
      h1 {
        color: #333;
      }
      ul {
        list-style-type: none;
        padding: 0;
      }
      li {
        margin-bottom: 10px;
        background-color: #f0f0f0;
        padding: 10px;
        border-radius: 5px;
      }
      .button-container {
        margin-top: 20px;
      }
      .signin-button {
        background-color: #4caf50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>DriveHub - Car Listing</h1>
    </header>

    <main>
      <h2>Available Cars:</h2>
      <ul id="car-list"></ul>
    </main>

    <div class="button-container">
      <button class="signin-button" onclick="signIn()">Sign In</button>
      <button class="signin-button" onclick="home()">Home</button>
    </div>

    <script>
      function signIn() {
        window.location.href = "/signin"; // Redirect to '/sign' route
      }

      function home() {
        window.location.href = "/"; // Redirect to '/' route
      }

      // Fetch data from backend and render it
      document.addEventListener("DOMContentLoaded", function () {
        fetch("/api/cars/all")
          .then((response) => response.json())
          .then((data) => {
            const carList = document.getElementById("car-list");
            // Loop through each car in the data and create a list item
            data.forEach((car) => {
              const li = document.createElement("li"); // Create a new list item
              const link = document.createElement("a"); // Create a new link
              link.textContent = `${car.make} ${car.model} (${car.year})`; // Set the link text to the car's make, model, and year
              link.href = `javascript:void(0);`; // Set href temporarily to prevent default link behavior
              link.style.textDecoration = "none"; // Remove underline from link
              link.style.color = "#333"; // Set link color to black
              li.appendChild(link); // Add the link to the list item
              li.style.cursor = "pointer"; // Set cursor to pointer on hover
              li.style.marginBottom = "10px"; // Add margin to the bottom of the list item
              li.style.backgroundColor = "#f0f0f0"; // Set background color of the list item
              li.style.padding = "10px"; // Add padding to the list item
              li.style.borderRadius = "5px"; // Add border radius to the list item

              // Add click event listener to handle navigation
              li.addEventListener("click", () => {
                window.location.href = `/api/cars/${car._id}`; // Redirect to '/api/cars/<id>'
              });

              carList.appendChild(li); // Add the list item to the car list
            });
          })
          .catch((error) => console.error("Error fetching data:", error));
      });
    </script>
  </body>
</html>
