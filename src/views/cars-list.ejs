<!-- index.html -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Car Listing</title>
    <style>
      /* Add your CSS styles here */
      body {
        font-family: Arial, sans-serif;
        padding: 20px;
      }
      h1 {
        color: #333;
      }
      ul {
        list-style-type: none;
        padding: 0;
      }
      li {
        margin-bottom: 10px;
        background-color: #f0f0f0;
        padding: 10px;
        border-radius: 5px;
      }
      .button-container {
        margin-top: 20px;
      }
      .signin-button {
        background-color: #4caf50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>DriveHub - Car Listing</h1>
    </header>

    <main>
      <h2>Available Cars:</h2>
      <ul id="car-list" curser="pointer" marginBottom="10px" backgroundColor="#f0f0f0" padding="10px" borderRadius="5px">
        <% cars.forEach((car) => { %>
        <li>
          <a href="/cars/<%= car._id %>" style="text-decoration: none; color: #333"> <%= car.make %> <%= car.model %> (<%= car.year %>) </a>
        </li>
        <% }); %>
      </ul>
    </main>

    <div class="button-container">
      <button class="signin-button" onclick="signIn()">Sign In</button>
      <button class="signin-button" onclick="home()">Home</button>
    </div>

    <script>
      function signIn() {
        window.location.href = "/auth/signin"; // Redirect to '/sign' route
      }

      function home() {
        window.location.href = "/"; // Redirect to '/' route
      }
    </script>
  </body>
</html>
